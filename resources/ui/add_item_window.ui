                      <object class="GtkLabel">
                        <property name="label">get desktop notification</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSwitch" id="ai_get_notif_switch">
                        <property name="active">True</property>
                        <property name="halign">center</property>
                      </object>
                    </child>
                  </object>
